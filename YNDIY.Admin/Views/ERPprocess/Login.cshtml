@{
    ViewBag.Title = "Login";
}
<meta name="viewport" content="width=device-width initial-scale=1" />
<link href="~/Content/css/ERPCSS/process/login.css" rel="stylesheet" />

<div class="login_container">
    <div class="login_bg">
        <img src="~/Content/imgs/erp/process/login_bg.png" />
    </div>
    <div class="login_panel">
        <div class="login_logo">
            <img src="~/Content/imgs/erp/process/login_logo.png" />
        </div>
        <ul class="login_body">
            <li class="login_li">
                <div class="li_left _left"><img src="~/Content/imgs/erp/process/login_account.png" /></div>
                <div class="li_right _left"><input type="text" name="login_account" placeholder="请输入账号" /></div>
                <span class="_clear"></span>
            </li>
            <li class="login_li">
                <div class="li_left _left"><img src="~/Content/imgs/erp/process/login_password.png" /></div>
                <div class="li_right _left"><input type="text" name="login_password" placeholder="请输入密码" /></div>
                <span class="_clear"></span>
            </li>
        </ul>
        <a href="javascript:void(0)" class="btn_login">登录</a>
    </div>
</div>
