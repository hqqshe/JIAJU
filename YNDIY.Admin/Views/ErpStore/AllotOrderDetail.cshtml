@using YNDIY.API.Models
@{
    ViewBag.Title = "调拨库存详情";
    Layout = "~/Views/Shared/ERPTemplate.cshtml";
}
@section require_js{
    <script src="@Path.getJsPath()/require.js" data-main="@Path.getJsPath()/app/order/OrderDetail"></script>
}
<div class="_clear_panel _search_banner nobtn">
    <div class=" form_group">
        <a href="javascript:void(0);" class="back _left"><img src="/Content/imgs/date/my_prev.png"> <span class="blue_color">返回</span></a>
    </div>
    <div class="form_group">
        <span class="gen"></span>
    </div>
    <div class=" form_group">
        <p class="infos">
            调拨库存关联的销售单
        </p>
    </div>
</div>
<div class="_wraper">
    <div class="pop_con">
        <table class="_list_table head_info">
            <thead>
                <tr>
                    <td>型号</td>
                    <td>品牌</td>
                    <td>产品名称</td>
                    <td>规格</td>
                    <td>颜色</td>
                    <td>包号</td>
                    <td>调拨日期</td>
                    <td>调拨数量</td>
                    <td>调拨可用库存</td>
                    <td>调拨锁定库存</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>型号</td>
                    <td>品牌</td>
                    <td>产品名称</td>
                    <td>规格</td>
                    <td>颜色</td>
                    <td>包号</td>
                    <td>调拨日期</td>
                    <td>调拨数量</td>
                    <td>调拨可用库存</td>
                    <td>调拨锁定库存</td>
                </tr>
                <tr>
                    <td>备注</td>
                    <td colspan="9">备注</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="pop_con">
        <table class="_list_table head_info">
            <thead>
                <tr>
                    <td>销售单号</td>
                    <td>订单号</td>
                    <td>下单日期</td>
                    <td>交货日期</td>
                    <td>客户名称</td>
                    <td>数量</td>
                    <td>已出库输了</td>
                    <td>锁库数量</td>
                    <td>调拨数量</td>
                    <td>剩余锁定数量</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>销售单号</td>
                    <td>订单号</td>
                    <td>下单日期</td>
                    <td>交货日期</td>
                    <td>客户名称</td>
                    <td>数量</td>
                    <td>已出库输了</td>
                    <td>锁库数量</td>
                    <td><input type="text" class="_input_area" placeholder="请填写数量" onkeyup="this.value = this.value.replace(/\D/g, '')" onafterpaste="    this.value = this.value.replace(/\D/g, '')"></td></td>
                    <td>剩余锁定数量</td>
                </tr>
            </tbody>
        </table>
        <div class="pop_con _clear_panel">
            <a href="javascript:void(0);" class="_btn blue _left sub_mit">保存</a>
        </div>
    </div>
</div>