@using YNDIY.API.Models
@{
    ViewBag.Title = "生产订单列表";
    Layout = "~/Views/Shared/ERPTemplate.cshtml";
}
@section require_js{
    <script src="@Path.getJsPath()/require.js" data-main="@Path.getJsPath()/app/product/ProductPlan"></script>
}
<div class="_clear_panel _search_banner " style="min-width:1500px;*width:1510px;">
    <div class=" form_group">
        <label>
            下单日期：
            <input type="text" placeholder="请选择开始日期" class="sear_input" id="start_date">
        </label>
    </div>
    <div class="form_group">
        <label>
            至：
            <input type="text" placeholder="请选择结束日期" class="sear_input" id="end_date">
        </label>
    </div>
    <div class="form_group">
        <span class="gen"></span>
    </div>
    <div class=" form_group">
        <label>
            交货日期：
            <input type="text" placeholder="请选择开始日期" class="sear_input" id="jiaohuo_start_date">
        </label>
    </div>
    <div class="form_group">
        <label>
            至：
            <input type="text" placeholder="请选择结束日期" class="sear_input" id="jiaohuo_end_date">
        </label>
    </div>
    <div class="form_group">
        <span class="gen"></span>
    </div>
    <div class="form_group" style="position:relative;width:175px;">
        <label>逾期状态：</label>
        <div class="_search_filter ">
            <div class="_select_prev">
                <span class="_select_text" style="line-height:32px;">全部</span>
                <div class="_select_down"><img src="/Content/imgs/template/_select_dowm.png"></div>
            </div>
            <select class="_opacity_select" id="late_state">
                <option value="-1">全部</option>
                <option value="0">未逾期</option>
                <option value="1">已逾期</option>
            </select>
        </div>
    </div>
    <div class="form_group">
        <span class="gen"></span>
    </div>
    <div class="form_group" style="position:relative;width:175px;">
        <label>订单状态：</label>
        <div class="_search_filter ">
            <div class="_select_prev">
                <span class="_select_text" style="line-height:32px;">全部</span>
                <div class="_select_down"><img src="/Content/imgs/template/_select_dowm.png"></div>
            </div>
            <select class="_opacity_select" id="order_state">
                <option value="-1">全部</option>
                <option value="0">未安排</option>
                <option value="1">已安排，未开始</option>
                <option value="2">生产中</option>
                <option value="3">生产完成</option>
            </select>
        </div>
    </div>
    <div class="form_group">
        <span class="gen"></span>
    </div>
    <div class="form_group">
        <input type="text" placeholder="品牌/批次号/客户名称/型号" class="search_input">
        <a href="javascript:void(0);" class="search_btn">
            <div id="cross" class="cross"></div>
           
        </a>
    </div>
</div>
<div class="_ajax_container"></div>
<!-- 制定生产计划面板-->
<div class="_pop_window plan_con">
    <div class="_pop_opacity_bg"></div>
    <div class="_pop_block" style="width: 600px; height:420px; margin-left: -300px; margin-top: -210px;">
        <div class="_pop_title">
            <span>制定生产计划</span>
            <a href="javascript:void(0);" class="_pop_close"><span>×</span></a>
        </div>
        <div class="_pop_body ">
            <div class="pop_con">
                <table class="_list_table order_info">
                    <thead>
                        <tr>
                            <td>品牌</td>
                            <td>产品名称</td>
                            <td>产品型号</td>
                            <td>产品规格</td>
                            <td>产品颜色</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>品牌</td>
                            <td>产品名称</td>
                            <td>产品型号</td>
                            <td>产品规格</td>
                            <td>产品颜色</td>
                        </tr>
                    </tbody>
                </table>
                <div class="pop_con">
                    <div class="form_item">
                        <span class="tip">下单日期：</span>
                        <input type="text" placeholder="生产下单日期" id="pop_start">
                    </div>
                    <div class="form_item">
                        <span class="tip">客户名称：</span>
                        <input type="text" placeholder="客户名称">
                    </div>
                    <div class="form_item">
                        <span class="tip">交货日期：</span>
                        <input type="text" placeholder="生产交货日期" id="pop_end">
                    </div>
                    <div class="form_item">
                        <span class="tip">数量：</span>
                        <input type="text" placeholder="请填写生产数量" onkeyup="this.value = this.value.replace(/\D/g, '')" onafterpaste="    this.value = this.value.replace(/\D/g, '')">
                    </div>
                    <div class="form_item">
                        <span class="tip">计划说明：</span>
                        <input type="text" placeholder="生产计划说明">
                    </div>
                </div>
            </div>
            <div class="_clear_panel">
                <a href="javascript:void(0);" class="_btn blue _right cancle">取消</a>
                <a href="javascript:void(0);" class="_btn blue _right right sub_mit">提交</a>
            </div>
        </div>
    </div>
</div>